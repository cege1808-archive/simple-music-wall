<h1>Sign Up</h1>
<hr/>

<% if @new_user.errors.any? %>
  <div>
    <h1>Signing Up Error</h1>
    <strong>Some issues with you new_user, please fix them: </strong>
    <ul>
      <% @new_user.errors.full_messages.each do |new_user_error| %>
        <li> <%= new_user_error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<form method="POST" action="/users">
  <div> 
    <label>Username:</label>
    <input type="text" name="username" value="<%= @new_user.username %>">
  </div>

  <div> 
    <label>Email:</label>
    <input type="text" name="email" value="<%= @new_user.email %>">
  </div>

  <div> 
    <label>Password:</label>
    <input type="text" name="password" value="<%= @new_user.password %>">
  </div>

  <div> 
    <label>Confirm Password:</label>
    <input type="text" name="confirm_password">
  </div>

  <div>
    <input type="submit" value="Sign Up">
  </div>
</form>